select distinct sku,  (select qty from items_sold_monthly pr where pr.sku=prm.sku and pr.vendor = prm.vendor and month = 12 and year = 2019) as December,  (select qty from items_sold_monthly pr where pr.sku=prm.sku and pr.vendor = prm.vendor and month = 1 and year = 2020) as January,  (select qty from items_sold_monthly pr where pr.sku=prm.sku and pr.vendor = prm.vendor and month = 2 and year = 2020) as February,  (select qty from items_sold_monthly pr where pr.sku=prm.sku and pr.vendor = prm.vendor and month = 3 and year = 2020) as March,  (select qty from items_sold_monthly pr where pr.sku=prm.sku and pr.vendor = prm.vendor and month = 4 and year = 2020) as April,  (select qty from items_sold_monthly pr where pr.sku=prm.sku and pr.vendor = prm.vendor and month = 5 and year = 2020) as May,  (select qty from items_sold_monthly pr where pr.sku=prm.sku and pr.vendor = prm.vendor and month = 6 and year = 2020) as June  from items_sold_monthly prm where upper(vendor) = 'BERKS' and ((year = 2019 and month >= 12) or (year = 2020 and month <= 5))
